<%=  render :layout => 'layouts/default' do %>
    <div class="col-md-4 col-md-offset-4 well">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "form-signin"}) do |f| %>
          <h2 class="form-signin-heading">Login in as Admin</h2>

          <%= f.label :email, class:"sr-only" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Admin Email",  autofocus: true %>

          <%= f.label :password, class:"sr-only" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
              </div>
          <% end -%>

          <div class="actions">
              <%= f.submit "Log in", class:"btn btn-lg h btn-color btn-block" %>
          </div>
          <br />
          <%= render "admins/shared/links" %>
      <% end %>
  </div>
  <%  end  %>
